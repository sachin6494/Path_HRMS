<Window x:Class="PathFinder.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathFinder"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="450">

    <Grid>
        <Border Background ="DarkBlue" CornerRadius ="20" Margin ="20">
            <StackPanel Margin="20">
                <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Label Content="User Name" Foreground="White" FontSize="30"/>
                <TextBox Name="txtUserName" Background="Blue" Foreground="White" FontSize="25" />
                <Label Content="Password" Foreground="White" FontSize="30"/>
                <PasswordBox Name="txtPassword" Background="Blue" Foreground="White" FontSize="25"/>
                <Button Name="btnSubmit" Height="40" Background="Blue" Foreground="White" FontSize="25" Content="Submit" Margin="60 20" Click="BtnSubmit_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
